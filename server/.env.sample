# ===========================================
# SERVER ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# ===========================================
# DATABASE CONFIGURATION (REQUIRED)
# ===========================================
# MongoDB Connection String
# Local MongoDB: mongodb://localhost:27017/tripPlannerDB
# MongoDB Atlas: mongodb+srv://<username>:<password>@cluster0.mongodb.net/tripPlannerDB
MONGO_DB_URI=mongodb://localhost:27017/tripPlannerDB
# Alternative format:
# MONGODB_URI=mongodb://localhost:27017/travel_planner

# ===========================================
# AUTHENTICATION & SECURITY (REQUIRED)
# ===========================================
# JWT Secret Key for token signing (CRITICAL: Use a strong, unique secret)
# Generate a secure key: openssl rand -base64 32
JWT_SECRET=your_secure_jwt_secret_key_minimum_32_characters_long_please_change_this

# JWT Token Expiration
JWT_EXPIRES_IN=7d

# ===========================================
# API KEYS (REQUIRED FOR FULL FUNCTIONALITY)
# ===========================================
# Pexels API Key for place images
# Get from: https://www.pexels.com/api/
PEXELS_API_KEY=your_pexels_api_key_here

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Server Port
PORT=5000

# Environment (development, staging, production)
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
# For multiple origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ===========================================
# OPTIONAL CONFIGURATIONS
# ===========================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your_session_secret_key_here

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads
